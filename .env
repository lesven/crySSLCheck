###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=change_me_to_a_random_32_char_string
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
DATABASE_URL="sqlite:///%kernel.project_dir%/data/tls_monitor.sqlite"
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# SMTP-Konfiguration – Beispiele:
# MAILER_DSN=smtp://user:pass@smtp.host:587
# MAILER_DSN=smtps://user:pass@smtp.host:465
# MAILER_DSN=null://null
MAILER_DSN=smtp://host.docker.internal:1025
#MAILER_DSN="smtp://mailhog:1025"
###< symfony/mailer ###

# Absender der E-Mail-Benachrichtigungen
MAILER_FROM_EMAIL=tls-monitor@example.com
MAILER_FROM_NAME="TLS Monitor"

# Komma-getrennte Liste der Empfänger für kritische Findings (leer = keine Benachrichtigungen)
ALERT_RECIPIENTS=sven.heising@gmail.com

# Scan-Engine-Konfiguration
SCAN_TIMEOUT=10
RETRY_DELAY=5
RETRY_COUNT=1
NOTIFY_ON_UNREACHABLE=true
MIN_RSA_KEY_BITS=2048

# Domain-Validierung (true = IP-Adressen erlaubt)
ALLOW_IP_ADDRESSES=true
