{% extends 'base.html.twig' %}

{% block title %}TLS Monitor – Domains{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-globe"></i> Domains</h2>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex gap-2">
            <a href="{{ path('domain_export') }}" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i> CSV Export
            </a>
            <a href="{{ path('domain_import') }}" class="btn btn-outline-secondary">
                <i class="bi bi-upload"></i> CSV Import
            </a>
            <button type="button"
                    class="btn btn-outline-{{ mailer_configured ? 'success' : 'warning' }}"
                    data-bs-toggle="modal" data-bs-target="#mailTestModal"
                    title="Test-Mail senden">
                <i class="bi bi-envelope"></i> Mail-Test
                {% if not mailer_configured %}<i class="bi bi-exclamation-triangle-fill"></i>{% endif %}
            </button>
            <a href="{{ path('domain_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Domain anlegen
            </a>
        </div>
    {% endif %}
</div>

{% if scan_results is defined and scan_results %}
    <div class="alert alert-info alert-dismissible fade show">
        <strong>Scan-Ergebnisse:</strong>
        <ul class="mb-0 mt-1">
            {% for result in scan_results %}
                <li>
                    {% set severityClass = {'critical': 'danger', 'high': 'warning', 'medium': 'info', 'low': 'secondary'} %}
                    <span class="badge bg-{{ severityClass[result.severity] ?? 'success' }}">{{ result.severity }}</span>
                    <strong>{{ result.finding_type }}</strong>
                    {% if result.finding_type == 'OK' and result.details %}
                        <div class="small mt-1 text-muted">
                            {% if result.details.protocol is defined %}
                                <i class="bi bi-shield-check"></i> <strong>Protokoll:</strong> {{ result.details.protocol }}<br>
                            {% endif %}
                            {% if result.details.cipher_name is defined %}
                                <i class="bi bi-key"></i> <strong>Cipher:</strong> {{ result.details.cipher_name }}
                                {% if result.details.cipher_bits is defined %}({{ result.details.cipher_bits }} bits){% endif %}<br>
                            {% endif %}
                            {% if result.details.public_key_type is defined and result.details.public_key_bits is defined %}
                                <i class="bi bi-key-fill"></i> <strong>Key:</strong> {{ result.details.public_key_type }} {{ result.details.public_key_bits }} bits<br>
                            {% endif %}
                            {% if result.details.valid_to is defined %}
                                <i class="bi bi-calendar-check"></i> <strong>Gültig bis:</strong> {{ result.details.valid_to }}
                                {% if result.details.days_remaining is defined %}(noch {{ result.details.days_remaining }} Tage){% endif %}<br>
                            {% endif %}
                            {% if result.details.subject is defined %}
                                <i class="bi bi-file-earmark-text"></i> <strong>Zertifikat:</strong> {{ result.details.subject }}
                            {% endif %}
                        </div>
                    {% elseif result.details.expiry_date is defined %}
                        <div class="small mt-1">
                            Läuft ab: {{ result.details.expiry_date }}
                            {% if result.details.days_remaining is defined %}({{ result.details.days_remaining }} Tage){% endif %}
                        </div>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endif %}

{% if mailer_debug is defined and mailer_debug is not empty %}
    <div class="alert alert-dismissible fade show {{ mailer_debug|last.success ? 'alert-success' : 'alert-warning' }}">
        <strong><i class="bi bi-envelope"></i> Mail-Debug:</strong>
        <ul class="mb-0 mt-1">
            {% for entry in mailer_debug %}
                <li>
                    {% if entry.success %}
                        <span class="badge bg-success"><i class="bi bi-check-lg"></i> gesendet</span>
                    {% else %}
                        <span class="badge bg-danger"><i class="bi bi-x-lg"></i> fehlgeschlagen</span>
                    {% endif %}
                    <strong>{{ entry.subject }}</strong>
                    &rarr; {{ entry.recipients|join(', ') }}
                    <span class="text-muted small">({{ entry.timestamp }})</span>
                    {% if entry.error is not empty %}
                        <br><span class="text-danger small"><i class="bi bi-exclamation-triangle"></i> {{ entry.error }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endif %}

{% if domains is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Noch keine Domains vorhanden.
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('domain_new') }}">Jetzt erste Domain anlegen.</a>
        {% endif %}
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>FQDN</th>
                    <th>Port</th>
                    <th>Beschreibung</th>
                    <th>Status</th>
                    <th>Erstellt</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                {% for domain in domains %}
                    <tr class="{{ domain.status == 'inactive' ? 'text-muted' : '' }}">
                        <td>{{ domain.fqdn }}</td>
                        <td>{{ domain.port }}</td>
                        <td>{{ domain.description ?? '–' }}</td>
                        <td>
                            {% if domain.active %}
                                <span class="badge bg-success">Aktiv</span>
                            {% else %}
                                <span class="badge bg-secondary">Inaktiv</span>
                            {% endif %}
                        </td>
                        <td>{{ domain.createdAt ? domain.createdAt|date('Y-m-d H:i') : '' }}</td>
                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('domain_edit', {id: domain.id}) }}"
                                       class="btn btn-outline-primary" title="Bearbeiten">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form method="POST" action="{{ path('domain_toggle', {id: domain.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-domain-' ~ domain.id) }}">
                                        <button type="submit"
                                                class="btn btn-outline-{{ domain.active ? 'warning' : 'success' }}"
                                                title="{{ domain.active ? 'Deaktivieren' : 'Reaktivieren' }}">
                                            <i class="bi bi-{{ domain.active ? 'pause-circle' : 'play-circle' }}"></i>
                                        </button>
                                    </form>

                                    <form method="POST" action="{{ path('domain_scan', {id: domain.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('scan-domain-' ~ domain.id) }}">
                                        <button type="submit"
                                                class="btn btn-outline-info"
                                                {{ not domain.active ? 'disabled' : '' }}
                                                title="{{ not domain.active ? 'Scan für deaktivierte Domains nicht möglich' : 'Jetzt scannen' }}">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </form>

                                    <form method="POST" action="{{ path('domain_delete', {id: domain.id}) }}"
                                          class="d-inline domain-delete-form" data-fqdn="{{ domain.fqdn }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-domain-' ~ domain.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Löschen">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}

{% if is_granted('ROLE_ADMIN') %}
<div class="modal fade" id="mailTestModal" tabindex="-1" aria-labelledby="mailTestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mailTestModalLabel">
                    <i class="bi bi-envelope"></i> Test-Mail senden
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="{{ path('smtp_test') }}">
                <div class="modal-body">
                    {% if not mailer_configured %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Mailer nicht vollständig konfiguriert.</strong>
                            Bitte <code>ALERT_RECIPIENTS</code> und <code>MAILER_DSN</code> in der <code>.env</code> prüfen.
                        </div>
                    {% endif %}
                    <label for="mailTestRecipient" class="form-label">Empfänger</label>
                    <input type="email" class="form-control" id="mailTestRecipient" name="recipient"
                           value="{{ alert_recipients }}" required placeholder="empfaenger@example.com">
                    <div class="form-text text-muted">Vorbefüllt aus <code>ALERT_RECIPIENTS</code>.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Senden
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block javascripts %}
<script>
// Clear scan results from session after displaying
{% if scan_results is defined and scan_results %}
    // Prevent re-display on refresh
    history.replaceState(null, '', window.location.pathname);
{% endif %}

document.querySelectorAll('.domain-delete-form').forEach(function (form) {
    form.addEventListener('submit', function (e) {
        var fqdn = form.getAttribute('data-fqdn');
        if (!confirm('Domain \u201e' + fqdn + '\u201c wirklich l\u00f6schen?')) {
            e.preventDefault();
        }
    });
});
</script>
{% endblock %}
