{% extends 'base.html.twig' %}

{% block title %}Benutzerverwaltung – TLS Monitor{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> Benutzerverwaltung</h2>
    <a href="{{ path('user_new') }}" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Benutzer anlegen
    </a>
</div>

{% if users is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Noch keine Benutzer vorhanden.
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Benutzername</th>
                    <th>E-Mail</th>
                    <th>Rolle</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <span class="badge bg-{{ user.role == 'admin' ? 'primary' : 'secondary' }}">
                                {{ user.role }}
                            </span>
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {id: user.id}) }}"
                               class="btn btn-sm btn-outline-secondary me-1" title="Bearbeiten">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="POST"
                                  action="{{ path('user_delete', {id: user.id}) }}"
                                  class="d-inline user-delete-form"
                                  data-username="{{ user.username }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-user-' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Löschen">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
{% endblock %}

{% block javascripts %}
<script>
document.querySelectorAll('.user-delete-form').forEach(function (form) {
    form.addEventListener('submit', function (e) {
        var username = form.getAttribute('data-username');
        if (!confirm('Benutzer \u201e' + username + '\u201c wirklich l\u00f6schen?')) {
            e.preventDefault();
        }
    });
});
</script>
{% endblock %}
